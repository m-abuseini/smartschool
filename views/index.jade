extends layout

block content
  
  
  h1 SMART SCHOOL
  p Welcome to Smart School

  if (!user)
    a(href="/login") Login
    br
    a(href="/register") Register
  if (user)
    p You are currently logged in as #{user.username}
    a(href="/logout") Logout



  //Wrapper
  #wrapper
    // User List Container
    #userListContainer

      // USER LIST
      h2 User List
      #userList
        table
          thead
            th username
            th email
            th Delete ?
            th Update ?
          tbody
       //  /USER LIST
     //  /User List Container



    // User manipulation container
    #userManipulationContainer

      //User Info
      #userInfo
      h2 User Info
      p
        strong Name:
        | <span id='userInfoName'></span>
        br
        strong Age:
        | <span id='userInfoAge'></span>
        br
        strong Gender:
        | <span id="userInfoGender"></span>
        br
        strong Location
        | <span id="userInfoLocation"></span>

        strong password
        | <span id="userInfoPassword"></span>
        strong usertype
        | <span id="userInfoType"></span>
      //  /User Info

    

      // ADD USER
      h2 Add User
      #addUser
        fieldset
         input#inputUserName(type='text',placeholder='Username')
         input#inputUserEmail(type='text',placeholder='Email')
         br
         input#inputUserFullname(type='text',placeholder='Full Name')
         input#inputUserAge(type='text',placeholder='Age')
         br
         input#inputUserLocation(type='text',placeholder='Location')
         input#inputUserGender(type='text',placeholder='gender')
         br
         input#inputUserPassword(type='password',placeholder='password')
         input#inputUserType(type='text',placeholder='user type')
         br
         button#btnAddUser Add User
      //  /add User

      br
      br
      // Edit USER
      h2 Edit User
      #editUser
        fieldset
         input#userId(type='text',placeholder='userId',disabled='disabled')
         br
         input#updateUserName(type='text',placeholder='Username')
         input#updateUserEmail(type='text',placeholder='Email')
         br
         input#updateUserFullname(type='text',placeholder='Full Name')
         input#updateUserAge(type='text',placeholder='Age')
         br
         input#updateUserLocation(type='text',placeholder='Location')
         input#updateUserGender(type='text',placeholder='gender')
         br
         input#updateUserPassword(type='password',placeholder='password')
         input#updateUserType(type='text',placeholder='user type')
         br
         button#btnUpdateUser Update User
      //  /add User
    //  /User manipulation container

  //  /WRAPPER
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
  script(src='/javascripts/global.js')
