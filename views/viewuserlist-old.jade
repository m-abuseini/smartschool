extends layout

block content

  //Wrapper
  #wrapper
    // User List Container
    #userListContainer

      // USER LIST
      h2 User List
      #userList
        table
          thead
            th username
            th email
            th Delete ?
            th Update ?
          tbody
       //  /USER LIST
     //  /User List Container



    // User manipulation container
    #userManipulationContainer

      //User Info
      #userInfo
      h2 User Info
      p
        strong Name:
        | <span id='userInfoName'></span>
        br
        strong Age:
        | <span id='userInfoAge'></span>
        br
        strong Gender:
        | <span id="userInfoGender"></span>
        br
        strong Location
        | <span id="userInfoLocation"></span>

        strong password
        | <span id="userInfoPassword"></span>
        strong usertype
        | <span id="userInfoType"></span>
      //  /User Info

    

      // ADD USER
      h2 Add User

      form#addUser(role='form', action="/api/users/adduser",method="post", style='max-width: 300px;', onsubmit="AJAXSubmit(this); return false;")

        fieldset
         input#inputUserName(type='text',placeholder='Username',name='username')
         input#inputUserEmail(type='text',placeholder='Email',name='email')
         br
         input#inputUserFullname(type='text',placeholder='Full Name',name='fullname')
         input#inputUserAge(type='text',placeholder='Age',name='age')
         br
         input#inputUserLocation(type='text',placeholder='Location',name='location')
         input#inputUserGender(type='text',placeholder='gender',name='gender')
         br
         input#inputUserPassword(type='password',placeholder='password',name='password')
         input#inputUserType(type='text',placeholder='user type',name='usertype')
         br
         button#btnAddUser Add User
      //  /add User

      br
      br
      // Edit USER
      h2 Edit User
      form#editUser(role='form', action="/api/users/edituser",method="post", style='max-width: 300px;', onsubmit="AJAXSubmit(this); return false;")
        fieldset
         input#userId(type='text',placeholder='userId',disabled='disabled')
         br
         input#updateUserName(type='text',placeholder='Username',name='username')
         input#updateUserEmail(type='text',placeholder='Email',name='email')
         br
         input#updateUserFullname(type='text',placeholder='Full Name',name='fullname')
         input#updateUserAge(type='text',placeholder='Age',name='age')
         br
         input#updateUserLocation(type='text',placeholder='Location',name='location')
         input#updateUserGender(type='text',placeholder='gender',name='gender')
         br
         input#updateUserPassword(type='password',placeholder='password',name='password')
         input#updateUserType(type='text',placeholder='user type',name='usertype')
         br
         button#btnUpdateUser Update User
      //  /add User
    //  /User manipulation container

  //  /WRAPPER
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
  script(src='/javascripts/global.js')
  script(src='/javascripts/users.js')
