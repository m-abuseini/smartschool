extends layout

block content
  .container
    h1 Login Page
    p.lead Say something worthwhile here.
    br
    form(role='form', style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="email", placeholder='Enter email', id='loginEmail')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password', id='loginPassword')
      br

      a#cancelLogin(href='javascript:;')
        button.btn.btn-default(type='button') cancel

      a#submitLogin(href='javascript:;')
        button.btn.btn-primary(type="button") Submit

        